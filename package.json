    "electron-window-state": "^5.0.3"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.3",
    "nodemon": "^3.0.1"
  },
  "files": [
    "**/*",
    "build/icon.*"
  ],
  "build": {
    "appId": "bolls.life",
    "mac": {
